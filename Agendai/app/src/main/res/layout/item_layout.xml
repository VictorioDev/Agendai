<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingRight="18dp"
    android:paddingLeft="18dp"

    >
    <ImageView
        android:id="@+id/circleImageView"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_panorama_fish_eye_black_48dp"
        android:tint="@color/circle"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:layout_centerVertical="true"
        />

    <TextView
        android:id="@+id/titleTextView"
        android:text="Prova Met. de Pesq. Cientifica"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/circleImageView"
        android:textColor="@color/mainText"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginLeft="10dp"
        android:gravity="top"
        android:maxWidth="190dp"

        />

    <TextView
        android:id="@+id/dateTextView"
        android:text="24/09/2017"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleTextView"
        android:layout_toRightOf="@+id/circleImageView"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:layout_marginLeft="10dp"
        android:padding="3dp"
        android:background="@drawable/round_date"
        android:textStyle="bold"
        />

    <ImageView
        android:id="@+id/checkImageView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_done_black_48dp"
        android:layout_marginRight="20dp"
        android:tint="@color/checkImageView"
        android:layout_toLeftOf="@+id/imgExcluir"
        android:layout_centerVertical="true"
        />

    <ImageView
        android:id="@+id/imgExcluir"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_delete_black_48dp"
        android:layout_alignParentRight="true"
        android:tint="@color/circle"
        android:layout_centerVertical="true"
        />
</RelativeLayout>